<Window x:Class="WpfTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTest"
        mc:Ignorable="d"
        Title="MainWindow" Width="400" Height="368.8">
    <Canvas>
        <Button x:Name="btnLogin" Content="Login" Canvas.Left="10" Canvas.Top="10" Width="374" Height="90" Click="btnLogin_Click"/>
        <Button x:Name="btnLogout" Content="Logout" Canvas.Left="10" Canvas.Top="105" Width="374" Height="90" Click="btnLogout_Click"/>
        <Label Content="AccessToken : " Canvas.Left="10" Canvas.Top="218"/>
        <Label Content="Username : " Canvas.Left="10" Canvas.Top="248"/>
        <Label Content="UUID : " Canvas.Left="10" Canvas.Top="279"/>
        <Label x:Name="lbAccessToken" Content="AccessToken" Canvas.Left="104" Canvas.Top="218" Width="280"/>
        <Label x:Name="lbUsername" Content="Username" Canvas.Left="104" Canvas.Top="248" Width="280"/>
        <Label x:Name="lbUUID" Content="UUID" Canvas.Left="104" Canvas.Top="279" Width="280"/>
    </Canvas>
</Window>
